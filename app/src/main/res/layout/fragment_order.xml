<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose your coffee shop:"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Uniondale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                    <ImageView
                        android:id="@+id/americano"
                        style="@style/ProductImage"
                        android:src="@drawable/buckstar_1" />
                </LinearLayout>

                <RelativeLayout
                    style="@style/Info"
                    android:layout_weight="65"
                    android:background="#caffbf">

                    <TextView
                        android:id="@+id/Uniondale_TextView"
                        style="@style/ProductName1"
                        android:text="Uniondale" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Uniondale_TextView"
                        android:layout_marginLeft="8dp"
                        android:text="1228 Hempstead Turnpike, Uniondale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name1"
                        android:layout_marginLeft="8dp"
                        android:text="+1 5165659886" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="10"
                    android:background="#e5ffdf"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/phone1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:layout_weight="50"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_phone" />

                    <ImageView
                        android:id="@+id/map1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="50"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_map" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FranklinSquare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                    <ImageView
                        android:id="@+id/cappuccino"
                        style="@style/ProductImage"
                        android:src="@drawable/buckstar_2" />
                </LinearLayout>

                <RelativeLayout
                    style="@style/Info"
                    android:layout_weight="65"
                    android:background="#caffbf">

                    <TextView
                        android:id="@+id/FranklinSquare_TextView"
                        style="@style/ProductName1"
                        android:text="Franklin Square" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/FranklinSquare_TextView"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:text="640 Franklin Avenue, Franklin Square" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name2"
                        android:layout_marginLeft="8dp"
                        android:text="+1 5162565668" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="10"
                    android:background="#e5ffdf"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/phone2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:layout_weight="50"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_phone" />

                    <ImageView
                        android:id="@+id/map2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="50"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_map" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/WayneWest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                    <ImageView
                        android:id="@+id/espresso"
                        style="@style/ProductImage"
                        android:src="@drawable/buckstar_3" />
                </LinearLayout>

                <RelativeLayout
                    style="@style/Info"
                    android:layout_weight="65"
                    android:background="#caffbf">

                    <TextView
                        android:id="@+id/WayneWest_TextView"
                        style="@style/ProductName1"
                        android:text="Wayne West" />

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/WayneWest_TextView"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:text="57 state route 23, Wayne" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:text="+1 9737850514" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="10"
                    android:background="#e5ffdf"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/phone3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:layout_weight="50"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_phone" />

                    <ImageView
                        android:id="@+id/map3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="50"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_map" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>






